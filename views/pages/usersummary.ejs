<html>
<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/nvd3/1.8.1/nv.d3.min.css"/>
    <script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular.min.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.6/d3.min.js" charset="utf-8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/nvd3/1.8.1/nv.d3.min.js"></script>
    <script src="/scripts/angular-nvd3.min.js"></script>

    <script type="text/javascript">
        var app = angular.module('usersummaryapp', ['nvd3']);

        app.controller('SummaryCtrl', function($scope) {
        $scope.options = {
                chart: {
                    type: 'pieChart',
                    height: 500,
                    x: function(d){return d.label;},
                    y: function(d){return d.value;},
                    //color: function(d){return d.color;},
                    showLabels: true,
                    showLegend: false,
                    transitionDuration: 500,
                    color:['#33CC33','#FF0000','#FF9900'],
                    labelThreshold: 0.01,
                    legend: {
                        margin: {
                            top: 5,
                            right: 35,
                            bottom: 5,
                            left: 0
                        }
                    }
                }
            };
        });
    </script>

    <style>
        body {
            padding-left: 0px;
            padding-right: 0px;
            word-wrap: break-word;
            margin: 0px;
        }
    </style>
</head>
<body>
<% include ../partials/navbar %>

<div class="row" style="margin-left: 5px;">
  <a href="/home" class="btn btn-primary"><span class="fa"></span> Home</a>
</div>

<div class="container" ng-app="usersummaryapp" ng-controller="SummaryCtrl">
  <nvd3 options="options" data=<%-JSON.stringify(summary)%>></nvd3>
</div>




<% include ../partials/footer %>



</body>
</html>
