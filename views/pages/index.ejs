            // $('#homeanima').animo({animation: ['bounceInRight'], duration: 3});
            // $('#platformsanima').animo({animation: ['bounceInLeft'], duration: 3});
            $('#homeanima').hide();
            $('#platformsanima').hide();
            $('#aboutanima').hide();
            $('#contactusanima').hide();
        });
    </script>
