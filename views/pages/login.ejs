<!doctype html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body>
<% include ../partials/navbar_other %>

<div class="container">
    <div class="col-sm-12 col-md-6 col-md-offset-3">

        <h1><span class="fa fa-sign-in"></span> Login</h1>

        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <% if (successFlash.length > 0) { %>
        <div class="alert alert-success"><%= successFlash %></div>
        <% } %>
        <!-- LOGIN FORM -->
        <form action="/login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <div align="center">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>

        <hr>

        <div align="center">
            <h3>or</h3>
        </div>

        <hr>

        <div class="row" align="center">


                <a href="/auth/facebook" class="btn btn-primary login-social-buttons col-sm-10 col-md-4 col-md-offset-1" role="button"><span
                            class="fa fa-facebook" role="button"></span>
                    Facebook</a>

                <a href="/auth/linkedin" class="btn btn-primary login-social-buttons col-sm-10 col-md-4 col-md-offset-2" role="button"><span
                            class="fa fa-linkedin" role="button"></span>
                    LinkedIn</a>

        </div>

        <hr>

        <p>Need an account? <a href="/signup">Signup</a></p>

        <p>Or go <a href="/">home</a>.</p>


    </div>
</div>

<% include ../partials/footer %>

</body>
</html>
