<!doctype html>
<html>
<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="/stylesheets/sidepanel.css">
</head>
<body>
<% include ../partials/navbar %>

<div class="container">
    <div class="row">

        <div class="col-sm-2 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li><a>Actions</a></li>
                <li><a href="/myratings">My Ratings</a></li>
                <li><a href="/history">History</a></li>
                <li class="active"><a href="/rateafriend">Rate a friend</a></li>
            </ul>
        </div>

        <div class="col-sm-10 col-md-10 col-sm-offset-2 col-md-offset-2">

            <% include ../partials/message %>

            <div class="page-header text-center">
                <h1><span class="fa"></span> Rate a Friend Panel</h1>
            </div>

            <% if (friends) { %>
            <h3><span class="fa"></span>Your Friends - <%= friends.length %></h3>
            <% }else{ %>
            <h3><span class="fa"></span>No friends found</h3>
            <% } %>

            <% if (friends) { %>
            <% for(var i = 0; i < friends.length ; i += 2) { %>

            <div class="row">
                <div class="col-sm-6 col-md-6">
                    <div class="well">
                        <img src="https://graph.facebook.com/v2.3/<%= friends[i].id %>/picture">
                        <!--<strong><a href="/facebook?url=<%= friends[i].id %>" target="_blank"> <%= friends[i].name %> </a></strong>-->
                        <strong><a href="https://www.facebook.com/<%= friends[i].id %>"
                                   target="_blank"> <%= friends[i].name %> </a></strong>
                        <!-- <div class="pull-right">
                            <a href="#" class="btn btn-primary btn-sm">Yes</a>
                            <a href="#" class="btn btn-default btn-sm">No</a>
                        </div> -->
                    </div>
                </div>

                <% if( friends[i + 1]) { %>
                <div class="col-sm-6 col-md-6">
                    <div class="well">
                        <img src="https://graph.facebook.com/v2.3/<%= friends[i + 1].id %>/picture">
                        <strong><a href="https://www.facebook.com/<%= friends[i + 1].id %>"
                                   target="_blank"> <%= friends[i + 1].name %> </a> </strong>
                        <!--<strong><a href="/facebook?url=<%= friends[i].id %>" target="_blank"> <%= friends[i].name %> </a></strong>-->
                        <!-- <div class="pull-right">
                            <a href="#" class="btn btn-primary btn-sm">Yes</a>
                            <a href="#" class="btn btn-default btn-sm">No</a>
                        </div> -->
                    </div>
                </div>
                <% } %>
            </div>

            <% } %>
            <% } %>
        </div>
    </div>
</div>

<% include ../partials/footer %>

</body>
</html>
